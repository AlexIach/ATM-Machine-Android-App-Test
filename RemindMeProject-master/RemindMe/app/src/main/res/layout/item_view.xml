<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Make Shown Here"
        android:textColor="#FFFFFF"
        android:id="@+id/item_txtName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Show Country Here"
        android:textColor="#FFFFFF"
        android:id="@+id/item_txtCountry"
        android:layout_below="@+id/item_txtName"
        android:layout_alignLeft="@+id/item_txtName"
        android:layout_alignStart="@+id/item_txtName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ID"
        android:textColor="#000000"
        android:id="@+id/item_txtId"
        android:layout_alignBottom="@+id/item_txtCountry"
        android:layout_toLeftOf="@+id/item_txtCountry"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
